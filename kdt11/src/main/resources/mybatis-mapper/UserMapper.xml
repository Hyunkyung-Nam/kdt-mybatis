<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kdtmybatis.kdt11.mapper.UserMapper">
<!--    resultType은 반환타입 -->
    <select id="selectAll" resultType="kdtmybatis.kdt11.domain.User">
        SELECT * FROM user
    </select>
    <insert id="insertUser" parameterType="kdtmybatis.kdt11.domain.User">
        INSERT INTO user (name, nickname) VALUES (#{user.name}, #{user.nickname})
    </insert>
    
    <update id="updateUser" parameterType="kdtmybatis.kdt11.domain.User">
        UPDATE user SET name = #{name}, nickname = #{nickname} WHERE id = #{id}
    </update>

    <delete id="deleteUser" parameterType="int">
        DELETE FROM user WHERE id = #{id}
    </delete>
</mapper>